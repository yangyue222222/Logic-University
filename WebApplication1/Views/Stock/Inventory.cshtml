
@using WebApplication1.Models
@{
    Layout = "~/Views/Shared/_StoreLayout.cshtml";
    ViewBag.Title = "Inventory";
}

<div class="ui grid">

    <div class="sixteen wide tablet column">
        
        <table class="ui celled table">
            <thead>
                <tr>
                    <th>Description</th>
                    <th>Stock Amount</th>
                    <th>Price</th>
                    <th>UOM</th>
                    <th>Category</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var i in (List<Item>)ViewData["Items"])
                {
                    <tr style="@(i.Quantity < 50 ? "color : red" : "") ">
                        <td>@i.Description</td>
                        <td>@i.Quantity</td>
                        <td>$@i.Price</td>
                        <td>@i.UnitOfMeasure</td>
                        <td>@i.Category</td>
                    </tr>
                }
            </tbody>   
        </table>
    </div>
</div>
